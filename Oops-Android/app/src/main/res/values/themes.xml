<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OopsAndroid" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Main_500</item>
        <item name="colorPrimaryVariant">@color/Main_400</item>
        <item name="colorOnPrimary">@color/White</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Yellow_Dark</item>
        <item name="colorSecondaryVariant">@color/Yellow_Medium</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 앱 전체에 바텀 시트 테마 적용 -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>
    <!-- 스플래시 스크린 -->
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- 안드로이드12 이상 -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/Main_500</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">150</item>
        <!-- 안드로이드12 미만 -->
        <item name="windowSplashScreenBackground">@color/Main_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/transparent</item>
        <!-- splash 화면 이후의 화면 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.OopsAndroid</item>
        <!-- Status bar and Nav bar 기본 설정 -->
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:navigationBarColor">@color/White</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <!-- 커서 색이 회색인 EditText 스타일 -->
    <style name="GrayEditTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">#33BDBDBD</item>
    </style>
    <!-- 커서 색이 보라색인 EditText 스타일 -->
    <style name="ColorEditTextStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/Main_500</item>
    </style>
    <!-- 월간 캘린더 텍스트 스타일 -->
    <style name="CalendarViewCustom">
        <item name="android:textColor">@drawable/selector_monthly_calendar_event_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>
    <!-- 요일(일주일) -->
    <style name="WeekTextStyle">
        <item name="android:textColor">@color/Black_70</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>
    <!-- 요일(월간) -->
    <style name="WeekTextStyle2">
        <item name="android:textColor">@color/Black_70</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>
    <!-- 날짜 -->
    <style name="DateTextStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>
    <!-- Enable Wide 버튼 스타일 -->
    <style name="WideButtonEnableStyle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wide_btn_bg</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <!-- Disable Wide 버튼 스타일 -->
    <style name="WideButtonDisableStyle">
        <item name="android:textColor">@color/Gray_400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wide_btn_bg</item>
        <item name="android:backgroundTint">@color/Gray_200</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <!-- Enable 팝업 버튼 스타일 -->
    <style name="PopUpButtonEnableStyle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_btn_bg</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <!-- 취소 팝업 버튼 스타일 -->
    <style name="PopUpButtonCancelStyle">
        <item name="android:textColor">@color/Gray_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_btn_bg</item>
        <item name="android:backgroundTint">@color/Gray_50</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <!-- Disable 팝업 버튼 스타일 -->
    <style name="PopUpButtonDisableStyle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popup_btn_bg</item>
        <item name="android:backgroundTint">@color/Red_Dark</item>
        <item name="android:outlineProvider">none</item>
    </style>
    <!-- 바텀 시트 스타일 -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_radius_30</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>