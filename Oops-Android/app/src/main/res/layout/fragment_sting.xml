<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clipChildren="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Main.Sting.StingFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_sting_bg_0"
        android:scaleType="centerCrop"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sting_hand_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_3"
        android:layout_marginBottom="-40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_sting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bnv_menu_3"
        android:textSize="30sp"
        android:textColor="@color/Black"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sting_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sting_sub"
        android:textSize="16sp"
        android:textColor="@color/Gray_400"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sting_hand_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_1"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 친구 4명 일 때 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLayout_sting_friends_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sting_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sting_friends">

        <!-- 친구 4-1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/iv_sting_friend4_1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 4-2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginTop="16dp"
            android:layout_marginStart="44dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend4_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cv_sting_friend4_3">

            <ImageView
                android:id="@+id/iv_sting_friend4_2"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 4-3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend4_1"
            app:layout_constraintStart_toEndOf="@id/cv_sting_friend4_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cv_sting_friend4_4">

            <ImageView
                android:id="@+id/iv_sting_friend4_3"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 4-4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginTop="22dp"
            android:layout_marginStart="93dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend4_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_sting_friend4_4"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 친구 5명 일 때 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLayout_sting_friends_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_sting_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_sting_friends">

        <!-- 친구 5-1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_sting_friend5_2"
            app:layout_constraintBottom_toBottomOf="@id/cv_sting_friend5_2">

            <ImageView
                android:id="@+id/iv_sting_friend5_1"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 5-2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend5_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/iv_sting_friend5_2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 5-3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend5_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginTop="56dp"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="-27dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend5_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cv_sting_friend5_4">

            <ImageView
                android:id="@+id/iv_sting_friend5_3"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 5-4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend5_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginTop="102dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend5_2"
            app:layout_constraintStart_toEndOf="@id/cv_sting_friend5_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cv_sting_friend5_5">

            <ImageView
                android:id="@+id/iv_sting_friend5_4"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>

        <!-- 친구 5-5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sting_friend5_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:scaleType="centerCrop"
            app:cardElevation="@null"
            android:layout_marginStart="108dp"
            app:layout_constraintTop_toBottomOf="@id/cv_sting_friend5_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_sting_friend5_5"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:src="@drawable/ic_friends_profile_default_50"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_sting_hand_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_2"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 친구 목록 버튼 -->
    <Button
        android:id="@+id/btn_sting_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 목록"
        android:textColor="@color/White"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="20sp"
        android:paddingStart="43dp"
        android:paddingEnd="43dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/ic_sting_list_btn"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:outlineSpotShadowColor="#80000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>