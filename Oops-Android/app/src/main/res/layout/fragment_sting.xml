<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Main.Sting.StingFragment">

    <TextView
        android:id="@+id/tv_sting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bnv_menu_3"
        android:textSize="30sp"
        android:textColor="@color/Black"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_sting_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sting_sub"
        android:textSize="16sp"
        android:textColor="@color/Gray_400"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_1"
        android:layout_marginTop="60dp"
        android:layout_marginStart="-105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 친구1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sting_friend_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="100dp"
        android:scaleType="centerCrop"
        app:cardElevation="@null"
        app:layout_constraintTop_toBottomOf="@id/tv_sting_sub_title"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_sting_friend_1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@color/Gray_300"/>
    </androidx.cardview.widget.CardView>

    <!-- 친구2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sting_friend_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="44dp"
        app:cardCornerRadius="100dp"
        android:scaleType="centerCrop"
        app:cardElevation="@null"
        app:layout_constraintTop_toBottomOf="@id/cv_sting_friend_1"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_sting_friend_2"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:background="@color/Gray_300"/>
    </androidx.cardview.widget.CardView>

    <!-- 친구3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sting_friend_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="89dp"
        app:cardCornerRadius="100dp"
        android:scaleType="centerCrop"
        app:cardElevation="@null"
        app:layout_constraintTop_toBottomOf="@id/cv_sting_friend_1"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/iv_sting_friend_3"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:background="@color/Gray_300"/>
    </androidx.cardview.widget.CardView>

    <!-- 친구4 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sting_friend_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginStart="93dp"
        app:cardCornerRadius="100dp"
        android:scaleType="centerCrop"
        app:cardElevation="@null"
        app:layout_constraintTop_toBottomOf="@id/cv_sting_friend_2"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_sting_friend_4"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:background="@color/Gray_300"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_2"
        android:layout_marginEnd="-124dp"
        app:layout_constraintTop_toBottomOf="@id/cv_sting_friend_3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sting_hand_3"
        android:layout_marginStart="-45dp"
        android:layout_marginBottom="-40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 친구 목록 버튼 -->
    <Button
        android:id="@+id/btn_sting_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 목록"
        android:textColor="@color/White"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="20sp"
        android:paddingStart="43dp"
        android:paddingEnd="43dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/all_radius_50"
        android:backgroundTint="@color/Main_500"
        android:layout_marginBottom="40dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:outlineSpotShadowColor="#80000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>