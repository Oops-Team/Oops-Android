<?xml version="1.0" encoding="utf-8"?>
<!-- 튜토리얼 화면&소지품 화면의 소지품 아이템 -->
<LinearLayout
    android:id="@+id/lLayout_item_tutorial_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/all_radius_08"
    android:layout_marginTop="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_item_tutorial_stuff"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_item_tutorial_stuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button3"
        android:background="@drawable/all_radius_50"
        android:backgroundTint="@color/Gray_50"
        android:textAlignment="center"
        android:textColor="@color/Gray_400"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>
</LinearLayout>