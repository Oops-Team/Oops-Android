<?xml version="1.0" encoding="utf-8"?>
<!-- 홈 화면의 캘린더 -->
<LinearLayout
    android:id="@+id/lLayout_home_calendar_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 기존 날짜 -->
    <FrameLayout
        android:id="@+id/fLayout_home_calendar_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/all_radius_50"
        android:backgroundTint="@color/White"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 요일 -->
            <TextView
                android:id="@+id/tv_home_calendar_day_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="12sp"
                android:textColor="#707070"
                android:fontFamily="@font/pretendard_bold"/>

            <!-- 일 -->
            <TextView
                android:id="@+id/tv_home_calendar_date_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="12sp"
                android:textColor="#333333"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- 선택된 날짜 -->
    <FrameLayout
        android:id="@+id/fLayout_home_calendar_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/all_radius_50"
        android:backgroundTint="@color/Main_500"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 요일 -->
            <TextView
                android:id="@+id/tv_home_calendar_day_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="12sp"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_bold"/>

            <!-- 일 -->
            <TextView
                android:id="@+id/tv_home_calendar_date_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="12sp"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>