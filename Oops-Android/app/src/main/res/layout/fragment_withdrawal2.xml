<?xml version="1.0" encoding="utf-8"?>
<!-- 회원탈퇴 2 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".ui.Main.MyPage.Withdrawal2Fragment">

    <include
        android:id="@+id/toolbar_withdrawal_2"
        layout="@layout/toolbar_sub"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/H3"
        android:text="@string/withdrawal_info_4"
        android:textColor="@color/Main_500"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Body2"
        android:text="@string/withdrawal_info_5"
        android:textColor="@color/Gray_400"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <!-- 개인정보 보관 약관 버튼 -->
    <LinearLayout
        android:id="@+id/lLayout_withdrawal_2_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/all_radius_12"
        android:backgroundTint="@color/Gray_100"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H3"
            android:text="@string/withdrawal_terms"
            android:textColor="@color/Black"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_24"
            app:tint="@color/Black_33"/>
    </LinearLayout>

    <!-- 탈퇴 동의 체크 박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <CheckBox
            android:id="@+id/cBox_withdrawal_2_check_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_withdrawal_checkbox"
            android:text="@string/withdrawal_info_7"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            android:paddingStart="8dp"/>

        <CheckBox
            android:id="@+id/cBox_withdrawal_2_check_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_withdrawal_checkbox"
            android:text="@string/withdrawal_info_8"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            android:paddingStart="8dp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <!-- 탈퇴 버튼 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp">

        <Button
            android:id="@+id/btn_withdrawal_2_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_withdrawal_next"
            style="@style/WideButtonDisableStyle"
            android:background="@color/Gray_100"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>