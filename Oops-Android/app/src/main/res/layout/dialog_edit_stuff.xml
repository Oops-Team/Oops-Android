<?xml version="1.0" encoding="utf-8"?>
<!-- 홈 - 소지품 화면에서 변경하실 인벤토리를 선택할 수 있는 화면 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".ui.Main.Inventory.Stuff.EditStuffDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stuff_edit_title"
        android:textColor="@color/White"
        android:textAlignment="center"
        style="@style/H3"/>

    <!-- 첫번째 줄 인벤토리 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- 인벤토리 버튼 1 -->
        <LinearLayout
            android:id="@+id/lLayout_dialog_edit_stuff_inventory_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_radius_12"
            android:backgroundTint="#374151"
            android:paddingTop="24dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="24dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dialog_edit_stuff_inventory_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_dialog_edit_stuff_inventory_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"/>
        </LinearLayout>

        <!-- 인벤토리 버튼 2 -->
        <LinearLayout
            android:id="@+id/lLayout_dialog_edit_stuff_inventory_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_radius_12"
            android:visibility="gone"
            android:backgroundTint="#374151"
            android:paddingTop="24dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="24dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dialog_edit_stuff_inventory_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_dialog_edit_stuff_inventory_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 두번째 줄 인벤토리 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- 인벤토리 버튼 3 -->
        <LinearLayout
            android:id="@+id/lLayout_dialog_edit_stuff_inventory_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/all_radius_12"
            android:visibility="gone"
            android:backgroundTint="#374151"
            android:paddingTop="24dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="24dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_dialog_edit_stuff_inventory_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_dialog_edit_stuff_inventory_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>