<?xml version="1.0" encoding="utf-8"?>
<!-- 공지사항 상세 화면 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray_50"
    android:orientation="vertical"
    tools:context=".ui.MyPage.NoticeDetailFragment">

    <include
        android:id="@+id/toolbar_notice_detail"
        layout="@layout/toolbar_sub"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Gray_100"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:paddingTop="22dp">
        <TextView
            android:id="@+id/tv_notice_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항 제목"
            style="@style/Button2"
            android:textColor="@color/Black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/tv_notice_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="12sp"
            android:textColor="@color/Gray_400"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginStart="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Gray_100"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/tv_notice_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항 내용"
            android:textSize="12sp"
            android:textColor="@color/Black"
            android:fontFamily="@font/pretendard_medium"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="65dp"/>
    </LinearLayout>
</LinearLayout>