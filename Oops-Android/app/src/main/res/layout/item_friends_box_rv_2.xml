<?xml version="1.0" encoding="utf-8"?>
<!-- 친구 목록 화면의 친구 리스트 박스2 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/friends_box"
    android:layout_marginTop="12dp">

    <!-- 프로필 사진 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_friends_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:scaleType="centerCrop"
        app:cardElevation="@null"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_friends_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_friends_profile_default_50"/>
    </androidx.cardview.widget.CardView>

    <!-- 이름 -->
    <TextView
        android:id="@+id/tv_friends_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/cv_friends_profile"
        app:layout_constraintStart_toEndOf="@id/cv_friends_profile"
        app:layout_constraintEnd_toStartOf="@id/iBtn_friends_sting"
        app:layout_constraintTop_toBottomOf="@id/tv_friends_delete"/>

    <!-- 친구 끊기 -->
    <TextView
        android:id="@+id/tv_friends_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 끊기"
        android:textColor="@color/Gray_500"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_friends_name"
        app:layout_constraintStart_toEndOf="@id/cv_friends_profile"
        app:layout_constraintBottom_toBottomOf="@id/cv_friends_profile"/>

    <ImageButton
        android:id="@+id/iBtn_friends_sting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_sting_42"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>