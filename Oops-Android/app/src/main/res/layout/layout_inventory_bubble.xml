<?xml version="1.0" encoding="utf-8"?>
<!-- 인벤토리 화면의 아이콘 변경 레이아웃 -->
<FrameLayout
    android:id="@+id/fLayout_inventory_bubble_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_inventory_bubble_polygon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/all_radius_50"
        android:backgroundTint="@color/Main_200"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingBottom="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/iBtn_inventory_bubble_time"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="23dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_time_inventory_20"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/iBtn_inventory_bubble_run"
            android:layout_width="15.04dp"
            android:layout_height="18dp"
            android:layout_marginEnd="23dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_run_inventory_20"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/iBtn_inventory_bubble_wallet"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="23dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_wallet_inventory_25"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/iBtn_inventory_bubble_computer"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginEnd="23dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_computer_inventory_25"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/iBtn_inventory_bubble_wheel"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_wheel_inventory_21"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</FrameLayout>