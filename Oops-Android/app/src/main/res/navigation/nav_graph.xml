<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- 로그인 화면 -->
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.oops_android.ui.Login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login"/>

    <!-- 홈 -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.oops_android.ui.Main.Home.HomeFragment"
        android:label="frm_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFrm_to_loginActivity"
            app:destination="@id/loginActivity"/>
    </fragment>

    <!-- 인벤토리 -->
    <fragment
        android:id="@+id/inventoryFragment"
        android:name="com.example.oops_android.ui.Main.Inventory.InventoryFragment"
        android:label="frm_inventory"
        tools:layout="@layout/fragment_inventory">
        <action
            android:id="@+id/action_inventoryFrm_to_loginActivity"
            app:destination="@id/loginActivity"/>
    </fragment>

    <!-- 일정 추가 -->
    <fragment
        android:id="@+id/toDoFragment"
        android:name="com.example.oops_android.ui.Main.Todo.ToDoFragment"
        android:label="frm_toDo"
        tools:layout="@layout/fragment_to_do">
        <action
            android:id="@+id/action_toDoFrm_to_loginActivity"
            app:destination="@id/loginActivity"/>
    </fragment>

    <!-- 마이페이지 -->
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.oops_android.ui.MyPage.MyPageFragment"
        android:label="frm_myPage"
        tools:layout="@layout/fragment_my_page">
        <action
            android:id="@+id/action_myPageFrm_to_loginActivity"
            app:destination="@id/loginActivity"/>
    </fragment>
</navigation>